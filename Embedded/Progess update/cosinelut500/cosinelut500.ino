void applyDCT_LUT(int *input, float *output) {
  for (int k = 0; k < N; k++) {
    float sum = 0.0;
    for (int n = 0; n < N; n++) {
      float dct_value = cosineLUT[k];  // Truy cập trực tiếp LUT
      sum += input[n] * dct_value;    // Tính toán DCT
    }
    output[k] = sum;
  }
}

